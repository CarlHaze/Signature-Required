    box-shadow: 4px 4px 10px rgba(77, 90, 74, 0.5);
    color: rgb(255, 255, 255);
}

.unity-text-element {
    flex-grow: 1;
    -unity-font-definition: url("project://database/Assets/UI%20Toolkit/UnityThemes/UnityDefaultRuntimeTheme.tss?fileID=2230732570650464555&guid=de41d693b99884c48a7ba74fcab05941&type=3#NotInter-Regular");
    -unity-font-style: bold;
    font-size: 35px;
    -unity-text-align: middle-center;
    text-overflow: ellipsis;
    -unity-text-outline-width: 1px;
    -unity-text-outline-color: rgba(0, 0, 0, 0.75);
    text-shadow: 5px 2px 0 rgb(0, 0, 0);
}
